{
  "background_color": "#ECEFF1",
  "description": "An offline-first PWA that acts as a share source and target.",
  "display": "standalone",
  "edge_side_panel": {
   "preferred_width": 450
 },
  "icons": [
    {
      "src": "images/splash.jpg",
      "sizes": "512x512",
      "type": "image/jpg"
    },
    {
      "purpose": "maskable",
      "src": "images/splash.jpg",
      "sizes": "512x512",
      "type": "image/jpg"
    },
    {
      "src": "images/icon.png",
      "sizes": "192x192",
      "type": "image/png"
    }
  ],
  "name": "Scrapbook PWA",
  "scope": "/",
  "share_target": {
    "action": "/_share-target",
    "enctype": "multipart/form-data",
    "method": "POST",
    "params": {
      "title": "mapped_title",
      "text": "_mapped_text",
      "url": "mapped_url",
      "files": [
        {
          "name": "mapped_files",
          "accept": [
            "audio/*",
            "image/*",
            "video/*"
          ]
        }
      ]
    }
  },
  "short_name": "Scrapbook PWA",
  "start_url": "/?utm_source=installed",
  "theme_color": "#37474F"
}
